# Event Handler Service - Environment Variables Template
# Copy this file to .env and update values for your environment

# PostgreSQL Configuration
EVENT_HANDLER_SERVICE_POSTGRES_USER=event_handler_db
EVENT_HANDLER_SERVICE_POSTGRES_PASSWORD=your_secure_password_here
EVENT_HANDLER_SERVICE_POSTGRES_HOST=localhost
EVENT_HANDLER_SERVICE_POSTGRES_DB=event_handler_db
EVENT_HANDLER_SERVICE_POSTGRES_PORT=5432
EVENT_HANDLER_SERVICE_POSTGRES_OUT_PORT=1234

# Kafka Configuration
EVENT_HANDLER_SERVICE_KAFKA_HOST=localhost
EVENT_HANDLER_SERVICE_KAFKA_PORT=9092
EVENT_HANDLER_SERVICE_TOPIC_NAME=event_handler

# Application Configuration
EVENT_HANDLER_SERVICE_DEBUG=false

# Docker Configuration (automatically set to true when running in Docker)
# EVENT_HANDLER_SERVICE_IS_DOCKER=false

